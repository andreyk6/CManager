<UserControl x:Class="CertifyMe.Client.Control.CommentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CertifyMe.Client.Control"
             mc:Ignorable="d" 
             MaxWidth="{Binding SystemParameters.PrimaryScreenWidth}">
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Text="{Binding Text}" TextAlignment="Center" FontSize="14"/>
            <TextBlock Text="{Binding CreationTime}" TextAlignment="Left" FontSize="12"/>
        </StackPanel>
    </Grid>
</UserControl>
